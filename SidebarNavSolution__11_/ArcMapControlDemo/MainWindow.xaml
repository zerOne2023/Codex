<Window x:Class="ArcMapControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ArcMapControl.Controls;assembly=ArcMapControl"
        mc:Ignorable="d"
        Title="ArcGIS风格地图控件示例" Height="720" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="8">
            <Button Content="全图" Width="80" Margin="0,0,8,0" Click="OnFullExtentClick" />
            <TextBlock VerticalAlignment="Center" Text="支持SHP/叠瓦图/天地图挂接，支持三度六度/经纬度参数化动校正" />
        </StackPanel>

        <controls:MapViewControl x:Name="MapView" Grid.Row="1" Margin="8" />
    </Grid>
</Window>
