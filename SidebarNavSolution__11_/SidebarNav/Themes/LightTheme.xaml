<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════ Light Theme ═══════════════ -->

    <!-- Sidebar 背景 -->
    <SolidColorBrush x:Key="Sidebar.Background"          Color="#F9F9FB"/>
    <SolidColorBrush x:Key="Sidebar.BorderBrush"         Color="#E5E7EB"/>

    <!-- 主色调 -->
    <SolidColorBrush x:Key="Sidebar.AccentBrush"         Color="#5B7FFF"/>
    <SolidColorBrush x:Key="Sidebar.AccentLightBrush"    Color="#EEF2FF"/>

    <!-- 文字 -->
    <SolidColorBrush x:Key="Sidebar.ForegroundBrush"     Color="#1F2937"/>
    <SolidColorBrush x:Key="Sidebar.SecondaryForeground" Color="#6B7280"/>
    <SolidColorBrush x:Key="Sidebar.DisabledForeground"  Color="#D1D5DB"/>

    <!-- 图标 -->
    <SolidColorBrush x:Key="Sidebar.IconBrush"           Color="#9CA3AF"/>
    <SolidColorBrush x:Key="Sidebar.IconActiveBrush"     Color="#5B7FFF"/>

    <!-- 项目交互 -->
    <SolidColorBrush x:Key="Sidebar.Item.HoverBrush"     Color="#F3F4F6"/>
    <SolidColorBrush x:Key="Sidebar.Item.SelectedBrush"  Color="#EEF2FF"/>
    <SolidColorBrush x:Key="Sidebar.Item.PressedBrush"   Color="#E0E7FF"/>

    <!-- 选中指示条 -->
    <SolidColorBrush x:Key="Sidebar.IndicatorBrush"      Color="#5B7FFF"/>

    <!-- 徽章 -->
    <SolidColorBrush x:Key="Sidebar.Badge.Background"    Color="#EF4444"/>
    <SolidColorBrush x:Key="Sidebar.Badge.Foreground"    Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Sidebar.Badge.TextBg"        Color="#F3F4F6"/>
    <SolidColorBrush x:Key="Sidebar.Badge.TextFg"        Color="#6B7280"/>

    <!-- 搜索框 -->
    <SolidColorBrush x:Key="Sidebar.Search.Background"   Color="#F3F4F6"/>
    <SolidColorBrush x:Key="Sidebar.Search.Foreground"   Color="#1F2937"/>
    <SolidColorBrush x:Key="Sidebar.Search.Placeholder"  Color="#9CA3AF"/>
    <SolidColorBrush x:Key="Sidebar.Search.BorderBrush"  Color="#E5E7EB"/>
    <SolidColorBrush x:Key="Sidebar.Search.FocusBorder"  Color="#5B7FFF"/>

    <!-- 分隔线 -->
    <SolidColorBrush x:Key="Sidebar.SeparatorBrush"      Color="#E5E7EB"/>

    <!-- 分组标题 -->
    <SolidColorBrush x:Key="Sidebar.GroupForeground"      Color="#9CA3AF"/>

    <!-- 搜索高亮 -->
    <SolidColorBrush x:Key="Sidebar.SearchHighlightFg"   Color="#5B7FFF"/>

    <!-- 展开箭头 -->
    <SolidColorBrush x:Key="Sidebar.ExpandArrowBrush"    Color="#9CA3AF"/>

    <!-- 滚动条 -->
    <SolidColorBrush x:Key="Sidebar.ScrollBarThumb"      Color="#B8BCC5"/>
    <SolidColorBrush x:Key="Sidebar.ScrollBarTrack"      Color="Transparent"/>

</ResourceDictionary>
