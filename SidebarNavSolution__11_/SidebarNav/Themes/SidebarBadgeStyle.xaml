<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:SidebarNav.Controls"
                    xmlns:vm="clr-namespace:SidebarNav.ViewModels"
                    xmlns:conv="clr-namespace:SidebarNav.Converters">

    <conv:BadgeTypeToVisibilityConverter x:Key="BadgeTypeVisConverter"/>

    <Style TargetType="{x:Type ctrl:SidebarBadge}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:SidebarBadge}">
                    <Grid>
                        <!-- 数字徽章 -->
                        <Border x:Name="NumberBadge"
                                Background="{DynamicResource Sidebar.Badge.Background}"
                                CornerRadius="8"
                                MinWidth="18" Height="18"
                                Padding="4,0"
                                Visibility="{Binding BadgeType, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BadgeTypeVisConverter}, ConverterParameter=Number}">
                            <TextBlock Text="{TemplateBinding CountDisplay}"
                                       Foreground="{DynamicResource Sidebar.Badge.Foreground}"
                                       FontSize="10" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- 红点 -->
                        <Ellipse x:Name="DotBadge"
                                 Width="8" Height="8"
                                 Fill="{DynamicResource Sidebar.Badge.Background}"
                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                 Visibility="{Binding BadgeType, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BadgeTypeVisConverter}, ConverterParameter=Dot}"/>

                        <!-- 文本徽章 -->
                        <Border x:Name="TextBadge"
                                Background="{DynamicResource Sidebar.Badge.TextBg}"
                                CornerRadius="4"
                                Padding="6,2"
                                Visibility="{Binding BadgeType, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BadgeTypeVisConverter}, ConverterParameter=Text}">
                            <TextBlock Text="{TemplateBinding Text}"
                                       Foreground="{DynamicResource Sidebar.Badge.TextFg}"
                                       FontSize="10" FontWeight="Medium"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
