<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:SidebarNav.Controls"
                    xmlns:conv="clr-namespace:SidebarNav.Converters">

    <conv:BoolToVisibilityConverter x:Key="BoolToVis_Group"/>
    <conv:InverseBoolToVisibilityConverter x:Key="InvBoolToVis_Group"/>

    <Style TargetType="{x:Type ctrl:SidebarNavGroup}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:SidebarNavGroup}">
                    <StackPanel>
                        <!-- 分隔线 -->
                        <Rectangle Height="1"
                                   Fill="{DynamicResource Sidebar.SeparatorBrush}"
                                   Margin="14,6"
                                   Visibility="{Binding ShowSeparator, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVis_Group}}"/>

                        <!-- 分组标题 -->
                        <Grid Margin="16,8,16,4"
                              Visibility="{Binding ShowGroupName, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVis_Group}}"
                              Cursor="Hand"
                              Background="Transparent">
                            <Grid.InputBindings>
                                <MouseBinding Gesture="LeftClick"
                                              Command="{x:Static ctrl:SidebarNavGroup.ToggleCollapseCommand}"
                                              CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Grid.InputBindings>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{TemplateBinding Header}"
                                       Foreground="{DynamicResource Sidebar.GroupForeground}"
                                       FontSize="11" FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,0"/>

                            <!-- 折叠箭头 -->
                            <Path Grid.Column="1"
                                  x:Name="CollapseArrow"
                                  Data="M6 9l6 6 6-6"
                                  Stroke="{DynamicResource Sidebar.ExpandArrowBrush}"
                                  StrokeThickness="1.5"
                                  Width="10" Height="10"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>

                        <!-- 子项容器 -->
                        <ItemsPresenter x:Name="ItemsHost"
                                        Visibility="{Binding IsCollapsed, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource InvBoolToVis_Group}}"/>
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsCollapsed" Value="True">
                            <Setter TargetName="CollapseArrow" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="-90"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
